{
	"name": "taskboard",
	"version": "1.0.0",
	"description": "A modern task and project management application with kanban boards and MongoDB integration",
	"main": "./out/main/index.js",
	"author": {
		"name": "TaskBoard Team",
		"email": "support@taskboard.com"
	},
	"homepage": "https://github.com/yourusername/taskboard",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/yourusername/taskboard.git"
	},
	"keywords": [
		"taskboard",
		"kanban",
		"project-management",
		"productivity",
		"electron",
		"mongodb"
	],
	"scripts": {
		"format": "prettier --write .",
		"lint": "eslint --cache .",
		"typecheck:node": "tsc --noEmit -p tsconfig.node.json --composite false",
		"typecheck:web": "tsc --noEmit -p tsconfig.web.json --composite false",
		"typecheck": "npm run typecheck:node && npm run typecheck:web",
		"test": "jest",
		"test:watch": "jest --watch",
		"test:coverage": "jest --coverage",
		"start": "electron-vite preview",
		"dev": "electron-vite dev",
		"build": "npm run typecheck && electron-vite build",
		"postinstall": "electron-builder install-app-deps",
		"build:unpack": "npm run build && electron-builder --dir",
		"build:win": "npm run build && electron-builder --win",
		"build:mac": "electron-vite build && electron-builder --mac",
		"build:linux": "electron-vite build && electron-builder --linux"
	},
	"dependencies": {
		"@dnd-kit/core": "^6.3.1",
		"@dnd-kit/sortable": "^10.0.0",
		"@dnd-kit/utilities": "^3.2.2",
		"@electron-toolkit/preload": "^3.0.2",
		"@electron-toolkit/utils": "^4.0.0",
		"@hookform/resolvers": "^5.2.2",
		"@radix-ui/react-checkbox": "^1.3.3",
		"@radix-ui/react-dialog": "^1.1.15",
		"@radix-ui/react-dropdown-menu": "^2.1.16",
		"@radix-ui/react-label": "^2.1.7",
		"@radix-ui/react-popover": "^1.1.15",
		"@radix-ui/react-radio-group": "^1.3.8",
		"@radix-ui/react-scroll-area": "^1.2.10",
		"@radix-ui/react-select": "^2.2.6",
		"@radix-ui/react-separator": "^1.1.7",
		"@radix-ui/react-slot": "^1.2.3",
		"@tailwindcss/vite": "^4.1.14",
		"class-variance-authority": "^0.7.1",
		"clsx": "^2.1.1",
		"cmdk": "^1.1.1",
		"date-fns": "^4.1.0",
		"lucide-react": "^0.545.0",
		"mongoose": "^8.19.1",
		"next-themes": "^0.4.6",
		"react-day-picker": "^9.11.1",
		"react-hook-form": "^7.65.0",
		"sonner": "^2.0.7",
		"tailwind-merge": "^3.3.1",
		"tailwindcss": "^4.1.14",
		"zod": "^4.1.12",
		"zustand": "^5.0.8"
	},
	"devDependencies": {
		"@electron-toolkit/eslint-config-prettier": "^3.0.0",
		"@electron-toolkit/eslint-config-ts": "^3.1.0",
		"@electron-toolkit/tsconfig": "^2.0.0",
		"@testing-library/jest-dom": "^6.9.1",
		"@testing-library/react": "^16.3.0",
		"@testing-library/user-event": "^14.6.1",
		"@types/jest": "^30.0.0",
		"@types/node": "^22.18.6",
		"@types/react": "^19.1.13",
		"@types/react-dom": "^19.1.9",
		"@vitejs/plugin-react": "^5.0.3",
		"electron": "^38.1.2",
		"electron-builder": "^25.1.8",
		"electron-vite": "^4.0.1",
		"eslint": "^9.36.0",
		"eslint-plugin-react": "^7.37.5",
		"eslint-plugin-react-hooks": "^5.2.0",
		"eslint-plugin-react-refresh": "^0.4.20",
		"identity-obj-proxy": "^3.0.0",
		"jest": "^30.2.0",
		"jest-environment-jsdom": "^30.2.0",
		"mongodb-memory-server": "^10.2.3",
		"prettier": "^3.6.2",
		"prettier-plugin-tailwindcss": "^0.6.14",
		"react": "^19.1.1",
		"react-dom": "^19.1.1",
		"ts-jest": "^29.4.5",
		"typescript": "^5.9.2",
		"vite": "^7.1.6"
	},
	"pnpm": {
		"onlyBuiltDependencies": [
			"electron",
			"esbuild"
		]
	}
}
